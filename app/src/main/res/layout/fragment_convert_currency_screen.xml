<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragments.ConvertCurrencyScreenFragment">>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:text="Convert Currency"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_back_24" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="40dp">

            <ImageView
                android:id="@+id/icon_currency"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ad" />

            <TextView
                android:id="@+id/txt_currency_ccy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AZN"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_currency"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon_convert"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginVertical="50dp"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_convert" />


            <TextView
                android:id="@+id/txt_currency_ccy2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UZS"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_currency_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:text="1 320 000" />

            <ImageView
                android:id="@+id/icon_uzs"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/uzs" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>

